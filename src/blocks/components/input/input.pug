//-+input()(label="Label" id="id" placeholder="placeholder")
mixin input()
	if (attributes.label)
		label.form-label(for=attributes.id)=attributes.label
	input.form-control(
		type=attributes.type ? `${attributes.type}`: 'text',
		value=attributes.value ? `${attributes.value}`: '',
		id=attributes.id
		placeholder=attributes.placeholder
	)&attributes(attributes)
	if (attributes.help)
		small.form-text.text-muted=attributes.help

//-+select()(label="Шаблон" id="messageTemplate_8295" items=['Шаблон 1','Шаблон 2'])
mixin select()
	if (attributes.label)
		label.form-label(for=attributes.id)=attributes.label
	select.form-select(
		value=attributes.value ? `${attributes.value}`: '',
		id=attributes.id
		placeholder=attributes.placeholder
	)&attributes(attributes)
		each item in attributes.items
			option=item

mixin check()
	.form-check(class=attributes.class)
		input.form-check-input(type='checkbox' value=attributes.id id=attributes.id)
		label.form-check-label(for=attributes.id)=attributes.label

mixin switch()
	.form-check.form-switch(class=attributes.class)
		input.form-check-input(type='checkbox' role='switch' id=attributes.id)
		if(attributes.label)
			label.form-check-label(for=attributes.id)=attributes.label

mixin textarea
	if (attributes.label)
		label.form-label(for=attributes.id)=attributes.label
	textarea.form-control(
		rows=attributes.rows ? `${attributes.rows}`: '3'
		id=attributes.id
		)&attributes(attributes)
